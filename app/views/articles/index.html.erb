<% if @tag %>
  <h1> All Articles with "<%= @tag.name %>"</h1>
<% else %>
  <h1> All Articles </h1>
<% end %>

<ul id="articles">
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article, class: 'article_title' %></li>
  <% end %>
</ul>

<%= link_to "Write a New Article", new_article_path, class: "new_article" %>
