<%= form_for @article do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title, :value => @article.title %>
  </p>
  <p>
    <%= f.label :body %> <br>
    <%= f.text_area :body, :value => @article.body %>
  </p>
  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
